{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "include": ["src/types/*", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
